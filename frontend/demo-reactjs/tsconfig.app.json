{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"composite": true,

		/* Resolución del módulo */
		"moduleResolution": "node",
		"isolatedModules": true,
		
		/* Emisión y JSX */
		"noEmit": false,
		"emitDeclarationOnly": true,        // Emitir solo declaraciones si es necesario
		"jsx": "react-jsx",                 // Habilita JSX para React
		"allowSyntheticDefaultImports": true, // Importación por defecto para módulos como 'react'
		
		/* Linting */
		"strict": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
