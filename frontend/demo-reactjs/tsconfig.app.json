{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"composite": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,               // Omite la verificación de tipos en bibliotecas

		/* Modos de resolución y emisión */
		"moduleResolution": "node",         // Cambiado de 'bundler' a 'node' para mayor compatibilidad
		"allowImportingTsExtensions": true,
		"isolatedModules": false,           // Desactivado para permitir módulos sin aislamiento
		"moduleDetection": "auto",          // Detecta módulos automáticamente
		"noEmit": false,                    // Permite la generación de archivos .js
		"jsx": "react-jsx",

		/* Configuración de Linting menos estricta */
		"strict": false,                    // Desactiva el modo estricto
		"noImplicitAny": false,             // Permite el uso de `any` implícito
		"noImplicitThis": false,            // Permite el uso de `this` implícito
		"noUnusedLocals": false,            // Desactiva la advertencia de variables locales no usadas
		"noUnusedParameters": false,        // Permite parámetros no usados
		"noFallthroughCasesInSwitch": false // Permite casos fall-through en switch
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]    // Excluye node_modules y dist
}
