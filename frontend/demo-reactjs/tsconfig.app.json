{
	"compilerOptions": {
		"target": "ES2022",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,
		"composite": true,
		
		/* Modificación de la resolución */
		"moduleResolution": "node",    // Para evitar conflictos, se usa "node" en vez de "bundler"
		"isolatedModules": false,
		
		/* Emisión ajustada */
		"noEmit": true,                // Necesario para habilitar `allowImportingTsExtensions`
		
		/* Linting */
		"strict": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noFallthroughCasesInSwitch": false
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
